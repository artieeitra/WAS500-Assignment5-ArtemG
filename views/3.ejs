<html>
    <head>
        <title>Book 1</title>
        <style type="text/css">
            #side-bar {
                height: 100%; width: 150px; position: absolute; left: 0; right: 0; padding-left:5px; padding-top: 20px; background-color: rgb(163, 155, 155);
            }
            ul {
                list-style:none; margin:0px; padding:0px; width:50%;
            }
            a {
                text-decoration: none; color: black; font-size: 16px;
            }
            .main  {
            margin-left: 150px;
            }
        </style>
    </head>
    <body>
        <%- include('partials/navbar') %>
        <div class="main" id="content">
            <p>
                <% book3.forEach(s=>{ %>
                <img src="images/animalfarm_cover.jpg" width="150" height="200">
                <br>
                <h2>Name: <%= s.name %></h2> 
                Description: <%= s.description %> <br>
                <h2>Details:</h2>
                <table>
                    <tr>
                        <td>Author:</td>
                        <td><%= s.author %></td>
                      </tr>
                    <tr>
                        <td>Year:</td>
                        <td><%= s.year %></td>
                      </tr>
                  </table>
                  <% });  
                  %>
        </div>
</body>
</html>
